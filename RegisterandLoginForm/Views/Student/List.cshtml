@model IEnumerable<RegisterandLoginDAL.Student>

<style>
    /* Table Styling */
    .student-table {
        border-radius: 10px;
        overflow: hidden;
        background: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .student-table thead {
        background: linear-gradient(90deg, #007bff, #0056b3);
        color: white;
        font-weight: bold;
    }

    .student-table tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.08);
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .student-table ul {
        padding-left: 1rem;
        margin: 0;
    }

    .student-table li {
        list-style: "📘 ";
        padding: 2px 0;
    }
</style>

<div class="container my-5">
    <h2 class="text-center text-primary fw-bold mb-4">📋 Student List</h2>

    <table class="table table-striped table-hover student-table">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Qualifications</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.StudentId</td>
                    <td>@s.FirstName @s.LastName</td>
                    <td>@s.Email</td>
                    <td>@s.PhoneNumber</td>
                    <td>
                        <ul>
                            @foreach (var q in s.Qualifications)
                            {
                                <li>
                                    <strong>@q.CourseName</strong> - @q.University
                                    (<span class="text-muted">@q.YearOfPassing</span>) -
                                    <span class="text-success fw-semibold">@q.Percentage%</span>
                                </li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>